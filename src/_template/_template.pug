-var assets_dir = './assets/';
-var url = '';
block var
  -var title = '';
  -var desc = '';
  -var key = '';
  -var name  = '';
  -var path = '';
  -var ogType = '';

doctype html
html(lang='ja')
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    meta(name="format-detection" content="telephone=no")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    
    link(rel="shortcut icon" href="/assets/img/common/favicon.ico")
    link(rel="icon" type="image/png" href="/assets/img/common/icon-32x32.png" sizes="32x32")
    link(rel="icon" type="image/png" href="/assets/img/common/icon-16x16.png" sizes="16x16")
    link(rel="apple-touch-icon-precomposed" href="/assets/img/common/apple-touch-icon.png")
    meta(name='description', content=desc)
    meta(name="Keywords", content=key)
          
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:site" content="富士旅館 | FUJI RYOKAN")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=desc)
    meta(name="twitter:image" content="")
    meta(name="twitter:url" content=url+path)

    meta(property="og:type" content=ogType)
    meta(property="og:title" content=title)
    meta(property="og:description" content=desc)
    meta(property="og:url" content=url+path)
    meta(property="og:image" content="")
    meta(property="og:site_name" content=name)
    link(rel='stylesheet', href=assets_dir+'css/index.css')
    
    if(path === '/contact')
      script(src="https://sdk.form.run/js/v2/formrun.js")
    
    script(src="https://unpkg.com/glottologist")
  

  body
    .page-container
      include ./_header
      block main
      include ./_footer
    script(type='text/javascript', src='/common/js/script.js')
    script(type='text/javascript', src=assets_dir+'js/script.js')
    
